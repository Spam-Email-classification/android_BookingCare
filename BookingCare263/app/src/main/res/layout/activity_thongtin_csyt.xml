<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.uicsyt.ThongtinCSYT">


    <androidx.appcompat.widget.Toolbar

        android:id="@+id/tbbacsilish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Thông tin CSYT"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:titleTextColor="@color/white"
        android:background="#7BC9DE"
        android:theme="?attr/actionBarTheme" />
    <TextView
        android:id="@+id/txttenbenhvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:gravity="center"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        app:srcCompat="@drawable/cosoyte" />

    <Button
        android:id="@+id/btnsuathongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cơ sở y tế"
        android:textColor="@color/black"
        android:backgroundTint="#E7BC9D"/>

    <Button
        android:id="@+id/btnqlyckkham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E7BC9D"
        android:textColor="@color/black"
        android:text="Quản lý chuyên khoa khám" />
</LinearLayout>
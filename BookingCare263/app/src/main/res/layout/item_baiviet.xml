<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgavatartbvshow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/txtnametbvshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:paddingLeft="20dp"
            android:text="Bác sĩ: hoàng thị Phương"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtitleshowbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề bài viết"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtcontentbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13dp"
        android:inputType="textMultiLine"
        android:hint="Bạn đang nghĩ gì" />
    <TextView
        android:id="@+id/txtxemthembv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="xemthem"
        android:textColor="#4CAF50"/>

    <ImageView
        android:id="@+id/imganhbaivietshow"
        android:layout_width="match_parent"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

</LinearLayout>
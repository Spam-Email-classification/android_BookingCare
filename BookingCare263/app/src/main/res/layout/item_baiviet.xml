<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="3dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/khungbo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgavatartbvshowitem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/baseline_account_circle_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtnametbvshowitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Bác sĩ: hoàng thị Phương"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txttimetbvshowitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="time dang"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txtitleshowbvitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề bài viết"
        android:maxLength="2"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtcontentbvitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13dp"
        android:maxLines="3"
        android:inputType="textMultiLine"
        android:hint="Bạn đang nghĩ gì" />
    <TextView
        android:id="@+id/txtxemthembv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="xemthem"
        android:textColor="#4CAF50"/>

    <ImageView
        android:id="@+id/imganhbaivietshowitem"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btndlk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="right"
        app:cornerRadius = "0dp"
        android:backgroundTint="#48C9DB"
        android:text="Đặt khám" />

</LinearLayout>
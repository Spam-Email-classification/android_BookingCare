<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgavatarkhoacsyt"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txttenkhoacsyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="TextView"
            android:textColor="#7BC9DE"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtdckhoacsyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="dia chi" />

        <Button
            android:id="@+id/btnckdatkham"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:backgroundTint="#7BC9DE"
            android:gravity="right"
            android:text="Đặt khám"
           />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgdeleteckkham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/deletead" />

</LinearLayout>
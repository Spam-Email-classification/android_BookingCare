<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin= "5dp"

    tools:context=".Bacsi_details">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbbacsidetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7BC9DE"
        app:title="Thông tin bác sĩ"
        app:titleTextColor="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="Chuyên khoa:"
                android:textColor="#1C5261"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttiltedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/khungbo"
                android:padding="10dp"
                android:text="Cơ xương khớp"
                android:textColor="#0d1b2a"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imgavtarbsdt2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_account_circle_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txttenbsdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PGS. TS. BSCKII. TTUT Vũ Văn Huè"
                        android:textColor="#2196F3"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtemaildetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtsdtdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtthogtindt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text='Bạn có thể mô tả rõ hơn về phần "thông tin" bạn đang cần không?
                  \n Bạn muốn hiển thị thêm thông tin về bác sĩ trong phần "Xem thêm"?
                    \nHay bạn cần cách quản lý dữ liệu bác sĩ trong ứng dụng?
                    \nHoặc là cách lưu trữ và truy vấn dữ liệu từ API hay database?  Mình sẽ giúp bạn chi tiết hơn tùy theo yêu cầu của bạn! 🚀'
                        android:textColor="#415a77" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Địa chỉ khám"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdiachidt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:text="Bệnh viện Ung bướu Hưng Việt \n34 Đại Cồ Việt, Hai Bà Trưng, Hà nội"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtgiakhamdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Giá khám: 500.000 đ"
                    android:textColor="#f95738"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btndatlichdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#7BC9DE"
                android:text="Đặt lịch ngay" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>